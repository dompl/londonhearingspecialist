# EditorConfig is awesome: http://EditorConfig.org
root = true
[{*.css,*.scss}]
charset = utf-8
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = false
tab_width = 4

[*.js]
charset = utf-8
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[{package.json,.jshintrc}]
indent_size = 2
indent_style = space

[*.php]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = tab
indent_size = 3